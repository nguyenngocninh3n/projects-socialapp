{
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "always",
        "rangeStart": 0,
        "parser": "babel",
        "requirePragma": false,
        "insertPragma": false,
        "proseWrap": "preserve"
      }
    }
  ]

}